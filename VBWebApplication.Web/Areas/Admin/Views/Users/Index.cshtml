@model AdminUsersViewModel
@{
    ViewData["Title"] = "User Administration";
}
<h1 class="headerText">@ViewData["Title"]</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="headerText">
                Username
            </th>
            <th class="headerText">
                E-mail
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @user.Username
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    <form asp-controller="Users" asp-action="AddToRole" method="post">
                        <div class="row">
                            <div class="col-md-7">
                                <input type="hidden" name="UserId" value="@user.Id" />
                                <select name="Role" asp-items="@Model.Roles" class="form-control"></select>
                            </div>
                            <div class="col-md-4">
                                <input type="submit" class="btn btn-sm btn-success" value="Add To Role" />
                                <a asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>